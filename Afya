@bot.on_message(filters.command(['start', 'afya']))

def start(bot, message):

	text = karibu	reply_markup = InlineKeyboardMarkup(welcome)

	message.reply(

	text=text,

	reply_markup=reply_markup

	)

	

@bot.on_callback_query()

def callback_query(Client, CallbackQuery):

	if CallbackQuery.data == 'Familia':

 		text1 = Familia

 		CallbackQuery.edit_message_text(

 		text1,

 		reply_markup = InlineKeyboardMarkup(LudiMwanzo)

	)

	

	elif CallbackQuery.data == 'Mwanzo':

		CallbackQuery.edit_message_text(

		text = karibu,

		reply_markup = InlineKeyboardMarkup(welcome)

		)

		

	elif CallbackQuery.data == 'Maumivu':

		CallbackQuery.edit_message_text(

		Maumivu,

		reply_markup = InlineKeyboardMarkup(LudiMwanzo)	

		)

		

	elif CallbackQuery.data == 'Mgonjwa':

		CallbackQuery.edit_message_text(

		Mugonjwa,

		reply_markup = InlineKeyboardMarkup(LudiMwanzo)

		)

		

	elif CallbackQuery.data == 'Alfatiha':

		CallbackQuery.edit_message_text(

		text = Alfatiha, disable_web_page_preview=True,

		reply_markup = InlineKeyboardMarkup(LudiMwanzo)

		)

		

	elif CallbackQuery.data == 'kinga watoto':

		CallbackQuery.edit_message_text(

		Watoto,

		reply_markup = InlineKeyboardMarkup(LudiMwanzo)

		)

		

	elif CallbackQuery.data == 'Jeraha':

		CallbackQuery.edit_message_text(

		Jeraha,

		reply_markup = InlineKeyboardMarkup(LudiMwanzo)

		)

@bot.on_message(filters.command('vitabu'))

def vitabu(bot, msg):

	bot.send_document(msg.chat.id, 'BQACAgQAAxkBAAIKKGOi4TMsIh4s-W5GlscTE70Kd8lPAAIbDQACwOpxUhJ9I5lLC4-FHgQ', caption='Qurani Tukufu')

	bot.send_document(msg.chat.id, 'BQACAgQAAxkBAAIKJmOi4TNqYYL5KJTnrrnYaLYVvsEPAAI5AQACSk4OB1K3SI3mZyHXHgQ', caption='**Ukweli** kuhusu ukimwi')

	

@bot.on_message(filters.command('hiswnul_muslim'))

def hiswnul_muslim(bot, msg):

	bot.send_document(msg.chat.id, 'BQACAgUAAxkBAAIKJ2Oi4TPYtURkwtlWKjrNbdrGer6FAAIyCAACuBmIVicMtiVw2uhkHgQ', caption='Kinga Ya Muislamu')

	bot.send_message(msg.chat.id, '[Kinga Ya Muislamu](https://hisnmuslim.com/i/sw/1)')

	

	

@bot.on_message(filters.command('ruqyah'))

def ruqya(bot, msg):

